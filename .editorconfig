# EditorConfig is awesome: https://editorconfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,jsx,ts,tsx,css,scss,md}]
charset = utf-8

# Matches the exact files either `Makefile` or `MAKEFILE`
# Set indent to tab
[Makefile]
indent_style = tab

# 4 space indentation for HTML and JSON files
[*.{html,json}]
indent_size = 4

# 2 space indentation for YAML files
[*.{yml,yaml}]
indent_size = 2
